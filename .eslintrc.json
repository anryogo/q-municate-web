{
    "extends": [
        "airbnb-base/legacy"
    ],
    "env": {
        "browser": true,
        "amd": true,
        "jquery": true
    },
    "globals": {
        "FB": "readonly",
        "QB": "readonly",
        "firebase": "readonly"
    },
    "plugins": [
        "optimize-regex"
    ],
    "rules": {
        "optimize-regex/optimize-regex": "warn",

        "indent": ["error", 4],
        "func-names": ["error", "never"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-use-before-define": ["error", { "functions": false }],
        "no-param-reassign": ["error", { "props": false }]
    }
}
