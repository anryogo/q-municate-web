{
  "name": "q-municate-web",
  "version": "2.0.0-alpha",
  "description": "Q-municate Web chat application",
  "homepage": "http://q-municate.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:QuickBlox/q-municate-web.git"
  },
  "license": "(Apache-2.0)",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "npm-run-all env:dev start:app",
    "start:prod": "npm-run-all env:prod start:app",
    "start:app": "npm-run-all clean:tmp sass server",
    "env:dev": "cross-env NODE_ENV=development node settings/env.js",
    "env:prod": "cross-env NODE_ENV=production node settings/env.js",
    "clean:tmp": "rimraf app/.css",
    "clean:dist": "rimraf app/.css app/.tmp dist && mkdirp app/.tmp",
    "sass": "node-sass app/styles/main.scss -o app/.css --source-map true",
    "server": "http-server ./app -a localhost -p 9000 -o",
    "watch": "npm run sass -- -w",
    "prebuild": "npm run lint && npm-run-all --parallel env:prod clean:dist",
    "build": "npm-run-all --parallel build:*",
    "build:css": "npm-run-all sass concat:css cssmin banner:css rev:css",
    "build:js": "npm-run-all bundle concat:js minify banner:js rev:js",
    "build:img": "npm-run-all --parallel imagemin:*",
    "build:copy": "npm-run-all --parallel copy:*",
    "postbuild": "npm run injecthash && rimraf app/.tmp",
    "bundle": "cross-os requirejs",
    "concat:css": "node scripts/concat-css.js",
    "concat:js": "node scripts/concat-js.js",
    "cssmin": "cleancss app/.tmp/build.css -o app/.tmp/build.min.css -O2",
    "minify": "uglifyjs app/.tmp/build.js -o app/.tmp/build.min.js -m",
    "banner:css": "headr app/.tmp/build.min.css -o=app/.tmp/build.min.css --version --homepage --license",
    "banner:js": "headr app/.tmp/build.min.js -o=app/.tmp/build.min.js --version --homepage --license",
    "rev:css": "hashmark -s -l 8 app/.tmp/build.min.css dist/styles/{hash}-{base}",
    "rev:js": "hashmark -s -l 8 app/.tmp/build.min.js dist/scripts/{hash}-{base}",
    "imagemin:parent": "imagemin app/images/* --out-dir=dist/images",
    "imagemin:smiles": "imagemin app/images/smiles-group/* --out-dir=dist/images/smiles-group",
    "copy:html": "cpy *.html \"../dist\" --cwd=app",
    "copy:assets": "cpy audio/ workers/ \"../dist\" --cwd=app --parents",
    "copy:libs": "cpy bower_components/quickblox/quickblox.min.js bower_components/firebase/firebase.js \"../dist\" --cwd=app --parents",
    "injecthash": "injectassets -s dist/_index.html -o dist/_index.html -d dist/ -g styles/*.css;scripts/*.js",
    "test": "npm run lint",
    "lint": "jshint app/scripts --reporter=node_modules/jshint-stylish"
  },
  "cross-os": {
    "requirejs": {
      "darwin": "r.js -o scripts/requirejs.js",
      "linux": "r.js -o scripts/requirejs.js",
      "win32": "r.js.cmd -o scripts/requirejs.js"
    }
  },
  "devDependencies": {
    "@songkick/injectassets": "^1.1.0",
    "bower": "^1.8.4",
    "clean-css-cli": "^4.3.0",
    "concat": "^1.0.3",
    "connect-livereload": "^0.5.4",
    "cpy-cli": "^2.0.0",
    "cross-env": "^5.2.0",
    "cross-os": "^1.3.0",
    "ghooks": "^1.3.2",
    "grunt": "^1.0.2",
    "grunt-bower-requirejs": "^2.0.0",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^1.0.1",
    "grunt-contrib-handlebars": "^1.0.0",
    "grunt-contrib-htmlmin": "^1.5.0",
    "grunt-contrib-imagemin": "^2.0.1",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-contrib-uglify": "^1.0.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-include-replace": "^4.0.1",
    "grunt-newer": "^1.1.1",
    "grunt-open": "^0.2.3",
    "grunt-requirejs": "^0.4.2",
    "grunt-rev": "^0.1.0",
    "grunt-sass": "^3.0.2",
    "grunt-usemin": "^3.1.1",
    "hashmark": "^5.0.0",
    "headr": "0.0.4",
    "http-server": "^0.11.1",
    "imagemin-cli": "^4.0.1",
    "jshint-stylish": "^2.1.0",
    "load-grunt-tasks": "^3.3.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "requirejs": "^2.3.6",
    "rimraf": "^2.6.3",
    "time-grunt": "^1.2.2",
    "uglify-js": "^3.5.9"
  },
  "engines": {
    "node": "^10.5.3",
    "npm": "^6.4.1"
  },
  "config": {
    "ghooks": {
      "pre-push": "grunt test"
    }
  }
}
